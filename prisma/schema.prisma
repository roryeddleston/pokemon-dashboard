generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Holding {
  id            String   @id @default(cuid())
  ownerId       String
  cardId        String
  cardName      String
  setName       String
  grade         String   @default("RAW")
  purchasePrice Float
  quantity      Int      @default(1)
  createdAt     DateTime @default(now())

  snapshots     PriceSnapshot[]

  @@index([ownerId])
  @@index([ownerId, createdAt])
  @@unique([ownerId, cardId, grade])
}

model PriceSnapshot {
  id         String   @id @default(cuid())
  ownerId    String
  holdingId  String
  value      Float
  capturedAt DateTime @default(now())

  holding Holding @relation(fields: [holdingId], references: [id], onDelete: Cascade)

  @@index([ownerId])
  @@index([holdingId, capturedAt])
}